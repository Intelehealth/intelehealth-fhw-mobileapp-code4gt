<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_video1"
        android:layout_width="@dimen/item_video_card_width"
        android:layout_height="@dimen/item_video_card_height"
        android:layout_marginEnd="@dimen/item_video_card_margin_end"
        android:layout_weight="1"
        android:backgroundTint="@color/iconTintGrayBottomNav"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/common_card_corner_radius"
        app:cardElevation="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/tv_video_desc_margin_top"
        android:layout_toEndOf="@+id/card_video1"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/tv_common_line_spacing1"
        android:text="@string/how_to_book_an_appointment"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/common_label_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/card_video1"
        android:layout_marginTop="@dimen/video_list_view_margin_top"
        android:background="@color/solidViewLightGray" />
</RelativeLayout>