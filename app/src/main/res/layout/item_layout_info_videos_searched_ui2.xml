<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_info_searched_video_card_margin_end"
        android:layout_marginBottom="@dimen/info_item_searched_margin_bottom"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_video1"
            android:layout_width="@dimen/info_item_searched_video_card_width"
            android:layout_height="@dimen/info_item_searched_video_card_height"
            android:layout_weight="1"
            android:backgroundTint="@color/iconTintGrayBottomNav"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/common_card_corner_radius"
            app:cardElevation="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_searched_video_desc_margin_top"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/tv_common_line_spacing1"
            android:text="@string/what_is_anemia"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/common_label_text_size" />

    </LinearLayout>
</ScrollView>