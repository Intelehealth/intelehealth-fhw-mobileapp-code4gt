<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_horizontal_view"
    android:layout_width="@dimen/tv_cal_view_date_width"
    android:layout_height="@dimen/tv_cal_view_date_height"
    android:layout_marginTop="@dimen/tv_cal_view_date_margin_top"
    android:layout_marginEnd="@dimen/tv_cal_view_date_margin_end"
    android:layout_marginBottom="@dimen/tv_cal_view_date_margin_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_appointment_date_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:hint="20"
            android:textColor="@color/selector_color_appointment_text"
            android:textSize="@dimen/tv_cal_view_date_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_cal_view_date_day_margin_top"
            android:gravity="center"
            android:hint="wed"
            android:textColor="@color/selector_color_appointment_text"
            android:textSize="@dimen/tv_cal_view_date_day_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
