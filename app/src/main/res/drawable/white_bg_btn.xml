<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryLightCard">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryLightCard" />
                    <corners android:radius="@dimen/corner_radius_8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#EFE8FF" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/corner_radius_8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#EFE8FF" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>